{
  "name": "pali",
  "private": true,
  "version": "0.0.0",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "NODE_ENV=development electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "@google/genai": "^0.8.0",
    "marked": "^4.0.0"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/node": "^22.14.0",
    "concurrently": "^7.6.0",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "fi.palagent.notes",
    "productName": "Palagent Notes",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json",
      "palagent.png"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
